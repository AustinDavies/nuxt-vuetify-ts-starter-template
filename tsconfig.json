{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "strictPropertyInitialization": false,
    "strictFunctionTypes": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "lib": ["dom", "es2015"],
    "paths": {
      "~/*": ["./*"]
    },
    "outDir": "./_tsbuilt"
  },
  "exclude": [".nuxt", "dist", "node_modules"],
  "compileOnSave": false
}
